<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0FFFFFFF"
    tools:context=".Other_Animation_Activity">

    <ImageView
        android:id="@+id/imageViewOther"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/water" />

    <Button
        android:id="@+id/scaleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewOther"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:onClick="scaleFunc"
        android:padding="10dp"
        android:text="Scale Animation"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/fadeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scaleBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Fade Animation"
        android:textAlignment="center"
        android:textSize="18sp" />
</RelativeLayout>